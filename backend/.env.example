# FastAPI Application Configuration
APP_TITLE="AeroPINN-Aircraft Backend"
APP_VERSION="1.0.0"
DEBUG=False
LOG_LEVEL="INFO"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","https://localhost:3000","https://aeropinn-aircraft.vercel.app"]
CORS_CREDENTIALS=True
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Database
DATABASE_URL="sqlite:///./aeropinn.db"

# PINN Model Configuration
PINN_HIDDEN_DIMS=128
PINN_NUM_LAYERS=6
PINN_LEARNING_RATE=0.001
PINN_EPOCHS=1000
PINN_BATCH_SIZE=32
PINN_OPTIMIZER="adam"
PHYSICS_LOSS_WEIGHT=0.5

# OpenFOAM Integration (Optional)
OPENFOAM_ENABLED=False
OPENFOAM_PATH="/opt/openfoam"
OPENFOAM_VERSION="v2306"
CFD_MESH_POINTS=5000

# Physics Constants
REF_DENSITY=1.225
REF_TEMPERATURE=288.15
REF_VISCOSITY=1.81e-5

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["csv","txt"]

# Caching
CACHE_ENABLED=True
CACHE_TTL=3600

# Monitoring
MONITOR_PERFORMANCE=True
METRICS_PORT=9090
